
@{
    Layout = "";
    ViewBag.Title = "Help";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Help - T-Rex PM DB</title>
    <!-- Bootstrap -->
    <link href="../vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="../vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="../vendors/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="../build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <!-- page content -->
    <div class="container body">
        <div class="main_container">
            <div class="page-title">
                <div class="title_left">
                    <h3 style="margin-left: 1cm;">T-Rex Solutions > <small style="text-decoration: underline">@Html.ActionLink("Back to Login","Login","Account")</small></h3>
                </div>
                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-9 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search help...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row" style="margin: .5cm">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Help</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>

                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div>
                                <h3>Account Creation Trouble?</h3>
                                <section>
                                    <p>To use this system, you need to have:</p>
                                    <ul>
                                        <li>A valid T-Rex, or subcontractor email address</li>
                                        <li>A record in the database that can verify your first and last name</li>
                                    </ul>
                                </section>
                            </div>

                            <div class="separator">
                                <h3>Login Trouble?</h3>
                                <section>
                                    <p>If you have registered, but are having trouble loggin in, wait a few minutes and try again</p>
                                    <br />
                                    <p>Alternatively, contact Esteban Keplinger at esteban.keplinger@trexcorporation.com</p>
                                </section>
                            </div>

                            <div class="separator">
                                <h3>Forgot email?</h3>
                                <p>Contact Esteban Keplinger at esteban.keplinger@trexcorporation.com</p>
                            </div>

                            <div class="separator">
                                <h3>Forgot password?</h3>
                                <p>Contact Esteban Keplinger at esteban.keplinger@trexcorporation.com</p>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- jQuery -->
                <script src="../vendors/jquery/dist/jquery.min.js"></script>
                <!-- Bootstrap -->
                <script src="../vendors/bootstrap/dist/js/bootstrap.min.js"></script>
                <!-- FastClick -->
                <script src="../vendors/fastclick/lib/fastclick.js"></script>
                <!-- NProgress -->
                <script src="../vendors/nprogress/nprogress.js"></script>

                <!-- Custom Theme Scripts -->
                <script src="../build/js/custom.min.js"></script>
            </div>

            <div>
                <p style="margin-left: 1cm;">T-Rex Portfolio Management Database</p>
            </div>
        </div>
    </div>
    <!-- /page content -->
</body>
</html>