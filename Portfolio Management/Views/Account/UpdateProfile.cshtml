@using Microsoft.AspNet.Identity
@model Portfolio_Management.Models.AspNetUser

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Account</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Update Profile Photo</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="image">
                            <p>Current Picture</p>
                            <div class="profile_pic">
                                <img src="@Url.Action("Photo", "Account" , new { UserId=User.Identity.GetUserId() })" />
                            </div>
                        </div>
                        @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                             
                                <div class="editor-label">
                                    <label for="profile">Upload Picture</label>
                                </div>
                                <div class="editor-field">
                                    <input name="Profile" id="profile" type="file" />
                                </div>
                                <p>
                                    <input type="submit" value="Upload" />
                                </p>
                            </fieldset>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->