
@model Portfolio_Management.Models.StaffDashboardViewModel
<div class="container">
    <!-- Modal -->
    <div id='myModal' class="modal fade" role="dialog">
        <div class="modal-dialog" style="width:800px;">
            <!-- Modal content-->
            <div class="modal-content">
                <div id='myModalContent'>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modify @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Education</h4>
                    </div>
                    <div id="modalForm" class="modal-body">
                        @using (Html.BeginForm("ManageStaffEducationsModal", "Educations"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal" style="text-align:center">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%;">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => Model.AllEducationsData.Educations[0].Adm_Degree.Degree)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => Model.AllEducationsData.Educations[0].School)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => Model.AllEducationsData.Educations[0].Completed_Date)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => Model.ManageEducationsDataList[0].RemoveEducation)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="modal-skill-table-body">
                                                @for (int i = 0; i < Model.ManageEducationsDataList.Count; i++)
                                                {
                                                    <tr>
                                                        <td>
                                                            @if (Model.ManageEducationsDataList[i].HasEducation == true)
                                                            {
                                                                @Html.DropDownListFor(modelItem => Model.ManageEducationsDataList[i].DegreeID, new SelectList(Model.AllEducationsData.Degrees, "ID", "Degree", Model.ManageEducationsDataList[i].DegreeID), new { @class = "form-control" })
                                                            }
                                                            else
                                                            {
                                                                @Html.DropDownListFor(modelItem => Model.ManageEducationsDataList[i].DegreeID, new SelectList(ViewBag.ListDegrees, "ID", "Degree"), "-- Select Degree --", new { @class = "form-control" })
                                                            }
                                                            @Html.ValidationMessageFor(modelItem => Model.ManageEducationsDataList[i].DegreeID, "", new { @class = "text-danger" })
                                                        </td>
                                                        <td>
                                                            @Html.EditorFor(modelItem => Model.ManageEducationsDataList[i].School)
                                                            @Html.ValidationMessageFor(modelItem => Model.ManageEducationsDataList[i].School, "", new { @class = "text-danger" })
                                                        </td>
                                                        <td>
                                                            @Html.EditorFor(modelItem => Model.ManageEducationsDataList[i].CompletedDate)
                                                            @Html.ValidationMessageFor(modelItem => Model.ManageEducationsDataList[i].CompletedDate, "", new { @class = "text-danger" })
                                                        </td>
                                                        <td style="padding:0px 4px 0px 0px; text-align:center;">
                                                            @if (Model.ManageEducationsDataList[i].HasEducation == true)
                                                            {
                                                                @Html.CheckBoxFor(modelItem => Model.ManageEducationsDataList[i].RemoveEducation)
                                                                @Html.ValidationMessageFor(modelItem => Model.ManageEducationsDataList[i].RemoveEducation, "", new { @class = "text-danger" })
                                                            }
                                                        </td>
                                                        @Html.HiddenFor(modelItem => Model.ManageEducationsDataList[i].StaffID)
                                                        @Html.HiddenFor(modelItem => Model.ManageEducationsDataList[i].EducationID)
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Submit" class="btn btn-default" />
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
