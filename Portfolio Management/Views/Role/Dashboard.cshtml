                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- List roles-->
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Roles</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="/Role/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
