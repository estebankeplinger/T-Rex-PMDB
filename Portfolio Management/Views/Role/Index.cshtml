@model Portfolio_Management.Models.UsersRolesViewModel

@{
    ViewBag.Title = "Role Admin Dashboard";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Role Admin Dashboard</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>User Accounts</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*<li>
                                    <a href="/Role/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                                </li>*@
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <!-- Search bar-->
                    <div class="title_right">
                        <div class="col-md-3 col-sm-3 col-xs-6 form-group pull-right top_search">
                            @using (Html.BeginForm())
                            {
                                <div class="input-group">
                                    @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "Search User Accounts" })
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">Go</button>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- /Search bar-->
                    <div class="x_content">
                        <div style="overflow-x:auto">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Users[0].FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Users[1].LastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Users[3].UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Users[2].Roles)
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Users)
                                    {      
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(m => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.LastName)
                                            </td>
                                            <td style="border-right: none">
                                                @Html.DisplayFor(m => item.UserName)
                                            </td>
                                            <td style="border-right: none;border-left: none">
                                                @foreach (var i in item.Roles)
                                                {
                                                    @i<a href='@Url.Action("Delete", "Role", new { username = item.UserName, roleName = i })'>
                                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                    </a> <br />
                                                }
                                            </td>
                                            <td style="border-left: none">
                                                <a href='@Url.Action("Edit", "Role", new { Username = item.UserName + "/" })'>
                                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                                </a>
                                            </td>                                                                    
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- List roles-->
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Roles</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="/Role/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                            </li>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div style="overflow-x:auto">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Roles[1].Name)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(m => item.Name)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
