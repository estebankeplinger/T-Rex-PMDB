@model Portfolio_Management.Models.ChangeRoleViewModel

<input type="button" class="btn btn-primary" id="changeUser" value="change Role" data-toggle="modal" data-target=".bs-example-modal-sm" />

<div id="pDiv" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel2"> Manage Roles</h4>
            </div>
            <div class="modal-body">
                <h4>@Html.DisplayFor(m => m.firstName) @Html.DisplayFor(m => m.lastName)</h4>
                <p>Username: @Html.DisplayFor(m => m.username)</p>
                <p>Current Role: @Html.DisplayFor(m => m.currentUserRole)</p>
                <hr />

                <a>New Role:@{
                    List<SelectListItem> roleList = new List<SelectListItem>();
                    foreach (var role in Model.roles)
                    {
                        roleList.Add(new SelectListItem
                        {
                            Text = role.Name

                        });
                    }
                }
                @Html.DropDownListFor(m => m.newUserRole, roleList, "New Role")
                </a>
              
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>

        </div>
    </div>
</div>




