@model Portfolio_Management.Models.StaffDashboardViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog" style="width:800px;">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Skills</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffSkills[0].Ref_Skill.Skill)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffSkills[0].Adm_Proficiency.Proficiency)
                                                </th>
                                                <th>

                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="modal-skill-table-body">
                                            @{ var current = 0; }
                                            @foreach (var item in Model.AllSkillsData.Skills)
                                            {
                                                current++;
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Skill)
                                                    </td>
                                                    <td>
                                                        <table style="width:100%;">
                                                            <tr>
                                                                @foreach (var prof_item in Model.AllSkillsData.Proficiencies)
                                                                {
                                                                    <td style="padding:0px 4px 0px 0px;">
                                                                        @Html.RadioButton("skill" + item.ID, prof_item.Proficiency, htmlAttributes: new { @skillnum = current })
                                                                        @Html.DisplayFor(m => prof_item.Proficiency)
                                                                    </td>
                                                                }
                                                            </tr>
                                                        </table>
                                                    </td>
                                                    <td class="skill-remove" skillnum="@Html.Raw(current)">

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input id="submit" value="Submit" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $("#submit").click(function() {
            var ids = [];       //skill ids for each choice
            var profs = [];     //profs for each choice

            $("input[type=radio]:checked").each(function() {
                var name = $(this).attr("name");
                var skillid = $(this).attr("skillnum");
                console.log(skillid + " " + $("input:radio[name="+name+"]:checked").val());
                ids.push(skillid);
                profs.push($("input:radio[name="+name+"]:checked").val());
            });
        })

        $('input:radio').change(
            function(){
                //alert($(this).val() + " " + $(this).attr("skillnum"));

        })
    </script>
}