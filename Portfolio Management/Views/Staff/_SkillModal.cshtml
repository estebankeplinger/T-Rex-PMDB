@model Portfolio_Management.Models.StaffDashboardViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Skills</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffSkills[0].Ref_Skill.Skill)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffSkills[0].Adm_Proficiency.Proficiency)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="modal-skill-table-body">
                                            @foreach (var item in Model.SelectedStaffData.StaffSkills)
                                            {
                                                <tr>
                                                    <td>
                                                        @*@Html.DropDownList("Skill_ID", null, "-- Select a Skill --", htmlAttributes: new { @class = "form-control" })*@
                                                        @Html.DisplayFor(modelItem => item.Ref_Skill.Skill)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Adm_Proficiency.Proficiency)
                                                    </td>
                                                </tr>
                                            }
                                                <tr id="modal-skill-add-row">
                                                    <td>
                                                        <a id="modal-skill-add" title="Add New Skill For @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                                                    </td>
                                                    <td>

                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Submit" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $("#modal-skill-add").click(function() {
                handleAddSkillClick()
            })

            function handleAddSkillClick() {
                $("#modal-skill-add").unbind();
                $("#modal-skill-add-row").html(`<td> @Html.DropDownList("Skill_ID", null, "-- Select a Skill --", htmlAttributes: new { @class = "form-control" }) </td><td> @Html.DropDownList("Proficiency_ID", null, "-- Select a Proficiency --", htmlAttributes: new { @class = "form-control" }) </td>`);
                //$("#modal-skill-add-row").html("<td>skill</td><td>proficiency</td>");

                $("#modal-skill-add-row").removeAttr('id');
                $("#modal-skill-table-body").append("<tr id='modal-skill-add-row'><td><a id='modal-skill-add' title='Add New Skill For @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)' role='button' aria-expanded='false'><i class='fa fa-plus-square'></i></a></td><td></td></tr>");
                $("#modal-skill-add").bind("click", function () {
                    handleAddSkillClick();
                });
            }
        </script>
    </div>
}