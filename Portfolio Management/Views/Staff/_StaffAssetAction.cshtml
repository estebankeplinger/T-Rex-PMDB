
@model Portfolio_Management.Models.StaffDashboardViewModel

<!-- page content -->

@if (Model.SelectedStaffData.Staff != null)
{
    @*<div class="col-md-6 col-sm-10 col-xs-12">*@
    <div class="x_panel">
        <div class="x_title">
            <h2>
                @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Assets
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="/Staff_Asset/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div style="overflow-x:auto">
                @if (Model.SelectedStaffData.StaffAssets.Count > 0)
                {
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Staff_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Contract_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Asset_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Item_Number)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Date_Issued)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Date_Returrned)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Created_On)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Created_By)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Modified_On)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffAssets[0].Modified_By)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SelectedStaffData.StaffAssets)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Staff_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contract_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Asset_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item_Number)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date_Issued)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date_Returrned)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_On)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_By)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Modified_On)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Modified_By)
                                    </td>

                                    <td>
                                        <a href='@Url.Action("Edit", "Edit", new { @*id = item.ID*@ })'>
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true" aria-label="Edit Asset"></span>
                                        </a>

                                        <a href='@Url.Action("Delete", "Delete", new { @*id = item.ID*@ })'>
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true" aria-label="Delete Asset"></span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        No assets found.
                    </div>
                }
            </div>
        </div>
    </div>
        @*</div>*@
}
<!-- /page content -->
