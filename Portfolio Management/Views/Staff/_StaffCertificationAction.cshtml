@model Portfolio_Management.Models.StaffDashboardViewModel

<!-- page content -->

@if (Model.SelectedStaffData.Staff != null)
{
    @*<div class="col-md-6 col-sm-10 col-xs-12">*@
    <div class="x_panel">
        <div class="x_title">
            <h2>
                @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Certifications
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="/Certifications/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div style="overflow-x:auto">
                @if (Model.SelectedStaffData.StaffCertifications.Count > 0)
                {
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffCertifications[0].Certification_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffCertifications[0].Issuing_Agency)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffCertifications[0].Date_Issued)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffCertifications[0].Expiration_Date)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SelectedStaffData.StaffCertifications)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Certification_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Issuing_Agency)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date_Issued)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Expiration_Date)
                                    </td>

                                    <td>
                                        <a href='@Url.Action("Edit", "Certifications", new { id = item.ID })'>
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true" aria-label="Edit Certification"></span>
                                        </a>

                                        <a href='@Url.Action("Delete", "Certifications", new { id = item.ID })'>
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true" aria-label="Delete Certification"></span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        No certifications found.
                    </div>
                }
            </div>
        </div>
    </div>
        @*</div>*@
}
<!-- /page content -->
