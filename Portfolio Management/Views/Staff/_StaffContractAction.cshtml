
@model Portfolio_Management.Models.StaffDashboardViewModel

<!-- page content -->

@if (Model.SelectedStaffData.Staff != null)
{
    @*<div class="col-md-6 col-sm-10 col-xs-12">*@
    <div class="x_panel">
        <div class="x_title">
            <h2>
                @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Contracts
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="/Staff_Clearance/Create" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div style="overflow-x:auto">
                @if (Model.SelectedStaffData.StaffContracts.Count > 0)
                {
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Customer_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].POP_Start)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].POP_End)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Program_Manager_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].IsPrime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].FillByDuration)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Created_On)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Created_By)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Modified_On)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffContracts[0].Modified_By)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SelectedStaffData.StaffContracts)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.POP_Start)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.POP_End)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Program_Manager_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsPrime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FillByDuration)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_On)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_By)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Modified_On)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Modified_By)
                                    </td>

                                    <td>
                                        <a href='@Url.Action("Edit", "Edit", new { @*id = item.ID*@ })'>
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true" aria-label="Edit Contract"></span>
                                        </a>

                                        <a href='@Url.Action("Delete", "Delete", new { @*id = item.ID*@ })'>
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true" aria-label="Delete Contract"></span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        No contracts found.
                    </div>
                }
            </div>
        </div>
    </div>
        @*</div>*@
}
<!-- /page content -->
