@model Portfolio_Management.Models.StaffDashboardViewModel

<!-- page content -->

@if (Model.SelectedStaffData.Staff != null)
{
    <div class="col-md-12 col-sm-12 col-xs-12">
        @{Html.RenderAction("ManageStaffEducationsModal", "Educations", new { id = Model.SelectedStaffData.Staff.ID });}
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)'s Education
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a title="Manage @Html.DisplayFor(model => model.SelectedStaffData.Staff.First_Name)' Education" data-toggle="modal" data-target="#staffEducationsModal" role="button" aria-expanded="false"><i class="fa fa-plus-square"></i></a>
                    </li>
                    <li>
                        <a title="Collapse this view" class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a title="Close this view" class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div style="overflow-x:auto">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.SelectedStaffData.StaffEducations[0].Degree_ID)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffEducations[0].School)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffEducations[0].Adm_Degree.Degree)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SelectedStaffData.StaffEducations[0].Completed_Date)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SelectedStaffData.StaffEducations)
                            {
                                <tr>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Degree_ID)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.School)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Adm_Degree.Degree)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Completed_Date)
                                    </td>

                                    <td>
                                        <a href='@Url.Action("Edit", "Educations", new { id = item.ID,staff_id = item.Staff_ID })'>
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true" aria-label="Edit Education"></span>
                                        </a>

                                        <a href='@Url.Action("Delete", "Educations", new { id = item.ID })'>
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true" aria-label="Delete Education"></span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
            }
<!-- /page content -->
